<?xml version="1.0" encoding="utf-8"?><!--

    single recycler list item layout
-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_space_default"
    android:layout_marginLeft="@dimen/large_space_default"
    android:layout_marginRight="@dimen/large_space_default"
    android:layout_marginTop="@dimen/small_space_default"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:contentPadding="@dimen/medium_space_default">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height">

        <!-- section text -->
        <TextView
            android:id="@id/section_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/small_space_default"
            android:textColor="@color/colorTextAccent"
            android:textSize="@dimen/news_section_text_size"
            android:textStyle="bold" />

        <!-- headline -->
        <TextView
            android:id="@id/title_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/details_list_text"
            android:layout_below="@id/section_list_text"
            android:layout_marginLeft="@dimen/small_space_default"
            android:layout_marginRight="@dimen/small_space_default"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/news_title_text_size" />

        <!-- author and published date text -->
        <TextView
            android:id="@id/details_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/small_space_default"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/news_details_text_size" />

        <!-- 'layer' on top for the onClick listener -->
        <View
            android:id="@id/clickable_list_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:background="@android:color/transparent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>